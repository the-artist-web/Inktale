<% 
    const {
        banner: {
            url: bannerURL
        },
        title,
        content,
        updatedAt
    } = locals.currentBlog;

    const compressedBannerURL = bannerURL?.replace("upload/", "upload/w_960,h_420,c_auto/q_auto,f_auto/");
%>

<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <%- include("../layouts/head", { title: "Edit blog | Inktale" }) %>
        <!-- google font link -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Exo+2:ital,wght@0,100..900;1,100..900&family=Inconsolata:wght@200..900&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Outfit:wght@100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap" 
        rel="stylesheet">
        <!-- custom js link -->
        <script src="/js/script.js" defer></script>
        <script src="/js/update_blog.js" type="module"></script>
    </head>
    <body>
        <!-- #TOP APP BAR -->
        <%- include("../partials/top_app_bar") %>

        <main class="main">
            <article class="page create-blog-page">
                <div class="container">
                    <h2 class="page-title text-on-surface headline-small">
                        Edit blog
                    </h2>

                    <form action="" class="blog-write-form" data-form>
                        <div class="image-field-wrapper">
                            <label for="banner" class="btn filled-tonal">
                                <input 
                                    type="file"
                                    name="banner"
                                    accept="image/*"
                                    id="banner"
                                    data-image-field
                                />

                                <i class="fa-solid fa-cloud-arrow-up"></i>

                                <p class="label-large">Upload image</p>

                                <div class="state-layer"></div>
                            </label>

                            <p class="text label-large text-on-surface-variant">
                                Use a ratio of 21:9 for best results. <br>
                                Only JPEG pnd PNG with max size of 5MB
                            </p>

                            <div class="image-preview img-cover show" data-image-preview>
                                <img 
                                    src="<%= compressedBannerURL %>" 
                                    alt="<%= title %>"
                                    loading="lazy" 
                                    class="img-cover"
                                />
                            </div>

                            <button type="button" class="icon-btn filled-tonal" data-image-preview-clear>
                                <i class="fa-solid fa-trash"></i>

                                <div class="state-layer"></div>
                            </button>
                        </div>

                        <input 
                            type="text"
                            name="title"
                            placeholder="Article Title ..."
                            required
                            class="title-field headline-large"
                            value="<%= title %>"
                        />

                        <textarea 
                            name="content" 
                            placeholder="Write your post content here ..."
                            required
                            class="textarea body-large"
                            data-textarea-auto-height
                        ><%= content %></textarea>

                        <div class="footer-action">
                            <button class="btn btn-fill" data-submit-btn>
                                <p class="label-large">Save changes</p>

                                <div class="state-layer"></div>
                            </button>
                        </div>
                    </form>
                </div>
            </article>
        </main>

        <!-- #FOOTER -->
        <%- include("../layouts/footer") %>

        <div class="snackbar-wrapper" data-stackbar-wrapper></div>
    </body>
</html>